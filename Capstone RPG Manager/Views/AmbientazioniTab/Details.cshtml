@model Capstone_RPG_Manager.Models.AmbientazioniTab

@{
    ViewBag.Title = "Details";
}

<h2 class="text-center my-5">@Model.Nome @if (Model.Privata)
{
     <i class="fa-solid fa-unlock-keyhole mx-2"></i>  
}</h2>

<p class="d-flex justify-content-end">
    <a href="~/AmbientazioniTab/PrivateOnDetails/@Model.ID" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Set Private/Public" class="me-2"><i class="fa-solid fa-unlock-keyhole"></i></a>
    <a href="~/AmbientazioniTab/Edit/@Model.ID" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Edit" class="me-2"><i class="fa-solid fa-pen-to-square"></i></a>
    <a href="~/AmbientazioniTab/Delete/@Model.ID" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Delete" class="me-2"><i class="fa-solid fa-trash-can"></i></a>
</p>

<div class="container my-5">
    <div class="text-center">
        <img src="~/Content/Images/DB/@Model.Immagine" alt="@Model.Nome" style="max-width:100%"/>
    </div>
        <div class="my-5">
            <p class="fw-bold">@Html.DisplayNameFor(model => model.Descrizione)</p>
            <p>@Html.DisplayFor(model => model.Descrizione)</p>
        </div>
</div>
