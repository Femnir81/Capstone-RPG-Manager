@model Capstone_RPG_Manager.Models.CampagneTab

@{
    ViewBag.Title = "Details";
}

<h2 class="text-center my-5">@Model.Nome</h2>

<p class="d-flex justify-content-end">
    <a href="~/CampagneTab/Edit/@Model.ID" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Edit" class="me-2"><i class="fa-solid fa-pen-to-square"></i></a>
    <a href="~/CampagneTab/Delete/@Model.ID" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Delete" class="me-2"><i class="fa-solid fa-trash-can"></i></a>
</p>

<div class="container my-5">
    <div>
        <p class="fw-bold">Starting Date</p>
