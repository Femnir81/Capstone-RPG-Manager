        <div class="col-md-6 p-0">
            @{ Html.RenderAction("PWSessionsListByCampaign", "SessioniTab");}
        </div>
        @*<div class="col-md-6 p-0">
            @{ Html.RenderAction("PWCampaignsListBySetting", "CampagneTab");}
