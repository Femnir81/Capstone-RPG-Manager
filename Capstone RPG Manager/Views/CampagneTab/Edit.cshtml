@model Capstone_RPG_Manager.Models.CampagneTab

@{
    ViewBag.Title = "Edit";
}

<h2 class="text-center my-5">Edit Campaign</h2>

<div class="container d-flex flex-column align-items-center my-5">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal d-flex flex-column">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="form-group my-2">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group my-2">
                @Html.LabelFor(model => model.Descrizione, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.TextAreaFor(model => model.Descrizione, new { htmlAttributes = new { @class = "form-control", style = "max-width:-webkit-fill-available; width:100%" } })
                    @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group my-2">
                @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Data, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group my-2">
                @Html.LabelFor(model => model.IDAmbientazioniTab, "IDAmbientazioniTab", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownList("IDAmbientazioniTab", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDAmbientazioniTab, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group my-3">
                <div>
                    <button type="submit" class="btn rpgButton w-100">Edit<img class="arrow" src="~/Content/Images/Site/Arrow.png" width="20" height="115" /></button>
                </div>
            </div>
        </div>
    }
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
