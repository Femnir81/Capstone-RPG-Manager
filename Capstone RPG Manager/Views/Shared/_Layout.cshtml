    <div class="container body-content p-0">
        @{
            if (User.Identity.IsAuthenticated)
            {
                Capstone_RPG_Manager.Models.ModelDBContext db = new Capstone_RPG_Manager.Models.ModelDBContext();
                var utente = db.UtentiTab.Where(x => x.Username == User.Identity.Name).FirstOrDefault();
                if (utente.DM)
                {
                    <p class="text-center fs-4 m-1">Mode: Dungeon Master <a href="~/UtentiTab/DMStatus/@utente.ID" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="Set DM/Player" class="me-2 fs-4"><i class="fa-solid fa-arrows-rotate"></i></a></p>
                }
                else
                {
                    <p class="text-center fs-4 m-1">Mode: Player <a href="~/UtentiTab/DMStatus/@utente.ID" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="Set DM/Player" class="me-2 fs-4"><i class="fa-solid fa-arrows-rotate"></i></a></p>
                }
            }
        }
