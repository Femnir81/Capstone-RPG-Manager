@model Capstone_RPG_Manager.Models.UtentiTab

@{
    ViewBag.Title = "UserProfile";
}
<h2 class="text-center my-5">
    @Model.Username @if (Model.DM)
    {
        <span class="fw-bold">DM</span>
    }
    else
    {
        <span class="fw-light">Player</span>
    }
    <a href="~/UtentiTab/DMStatus/@Model.ID" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Set DM/Player" class="me-2 fs-4"><i class="fa-solid fa-image-portrait"></i></a>
</h2>

<div class="container my-5">
    <div class="rowShield m-0 p-1">
        <h3 class="text-center my-5">Info</h3>
        <div>
            <h4 class="fw-bold">@Html.DisplayNameFor(model => model.Password)</h4>
            <p>@Html.DisplayFor(model => model.Password)</p>
        </div>
        <div>
            <h4 class="fw-bold">@Html.DisplayNameFor(model => model.Email)</h4>
            <p>@Html.DisplayFor(model => model.Email)</p>
        </div>
    </div>
    <div class="row rowShield mx-0 my-5 p-1">
        <div class="col-md-6 p-0">
            @{ Html.RenderAction("PWSearchingList", "UtentiTab");}
        </div>
    </div>
    @{
        if (ViewBag.Messages != 0)
        {
            <div class="row rowShield mx-0 my-5 p-1">
                @{ Html.RenderAction("PWProfileMessages", "AmicizieTab");}
            </div>
        }
    }
</div>
